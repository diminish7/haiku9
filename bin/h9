#!/usr/bin/env coffee
{join} = require "path"
program = require "commander"
{call, read} = require "fairmont"

call ->

  version = yield read join __dirname, "..", "VERSION"

  program
    .version(version)
    .command('serve', 'run a Web server to serve your content')
    .command('build', 'compile the Web site assets into the given directory')
    .command('publish', 'compile and deploy website assets on AWS infrastructure')
    .parse(process.argv);
