#!/usr/bin/env coffee

program = require "commander"
require "../src"
{run} = require "panda-9000"

environment = false

program
.usage "h9 publish <environment>"
.arguments '<env>'
.action (env) -> environment = env
.parse process.argv

if !environment
  console.error "No environment has been provided."
  console.error "Usage: h9 publish <environment>"
  process.exit 1

run "publish", [environment]
